@{
    ViewData["Title"] = "Grade Calculator";
}
@model GradeCalculatorModel;
<p>Below is a Grade Calculator for IS 413. Enter your grade (as a %) for each item</p>
<form method="post">
    <!--Form for gathering grade scores on each assignment-->
    <label> Assignments: </label>
    <input id="txtAssignment" asp-for="Assignment" /><br />
    <label> Group Project: </label>
    <input id="txtProject" asp-for="Project" /><br />
    <label> Quiz: </label>
    <input id="txtQuiz" asp-for="Quiz" /><br />
    <label> Mitderm: </label>
    <input id="txtMidterm" asp-for="Midterm" /><br />
    <label> Final Exam: </label>
    <input id="txtFinal" asp-for="Final" /><br />
    <label> Intex: </label>
    <input id="txtIntex" asp-for="Intex" /><br />

    <div asp-validation-summary="All"></div>

    <!--Button to call upon the grade calculator javascript file-->
    <input id="btnFinal" type="submit" value="Calculate Final Grade" />
    @*<button id="btnFinal" type="submit" onclick="CalculateFinalGrade()">Calculate Final Grade</button>*@
    <br />
    <!--label where the results are printed-->
    <label id="textFinalGradeLetter" value=""></label> <br />
</form>
